{% set pageName = "Changes to Five Ways and Broad Street" %}
{% extends "layout.njk" %}

{% block content %}
{% include "partials/breadcrumb.njk" %}
<main class="wmnds-container wmnds-container--main">
  <div class="wmnds-grid">
    <div class="wmnds-col-1 wmnds-col-md-2-3">
      <div class="wmnds-grid">
        <div class="wmnds-col-1 wmnds-col-md-2-3">
          <h1>{{ pageName | safe}}</h1>
        </div>
      </div>
      <h2>Information for drivers</h2>
      <p>Last updated: 5 November 2019</p>
    </div>
    <div class="wmnds-col-1 wmnds-col-md-1-3">
      <img src="../img/metro-disruption.png" alt="Metro construction sign" />
    </div>
  </div>
  <div class="wmnds-grid main">
    <div class="wmnds-col-1 wmnds-col-md-2-3 wmnds-p-r-lg copy">
      {% include "partials/widgets/body/body-text.njk" %}
      {% include "partials/widgets/body/waze-tile.njk" %}
      {% include "partials/widgets/body/map-tile.njk" %}
      {% include "partials/widgets/body/travel-tips.njk" %}
    </div>
    <div class="wmnds-col-1 wmnds-col-md-1-3 sidebar">
      {% include "partials/widgets/sidebar/page-contents.njk" %}
      {% include "partials/widgets/sidebar/travel-updates.njk" %}
    </div>
</main>
{% endblock %}